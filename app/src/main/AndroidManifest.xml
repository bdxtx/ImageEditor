<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ganjie.image_editor">

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImageControlActivity"></activity>
        <activity android:name=".ImageCropActivity" />
        <activity
            android:name=".PhotoEnhanceActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".AddTextActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".MosaicActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".BrushActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ImageShowActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".InputActivity"
            android:launchMode="singleTop" />
        <activity
            android:name=".ImageEditActivity"
            android:launchMode="singleTop" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>