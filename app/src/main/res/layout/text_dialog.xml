<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_20"
            android:src="@drawable/cancel_btn"/>
        <ImageView
            android:id="@+id/img_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_20"
            android:src="@drawable/sure_btn"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/et_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入文字"
        android:textColor="#F1340E"
        android:textSize="@dimen/sp_18"
        android:background="@null"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <ImageView
        android:id="@+id/text_bg"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:layout_marginLeft="@dimen/dp_21"
        android:visibility="gone"
        android:src="@drawable/text_bg"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_19">
        <ImageView
            android:id="@+id/text_per"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_21"
            android:src="@drawable/text_per"/>
        <ImageView
            android:id="@+id/color_white"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_19"
            android:src="@drawable/color_white"/>
        <ImageView
            android:id="@+id/color_black"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_black"/>
        <ImageView
            android:id="@+id/color_red"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_selector"/>
        <ImageView
            android:id="@+id/color_yellow"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_yellow"/>
        <ImageView
            android:id="@+id/color_green"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_green"/>
        <ImageView
            android:id="@+id/color_blue"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_blue"/>
        <ImageView
            android:id="@+id/color_purple"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_purple"/>
        <ImageView
            android:id="@+id/color_pink"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/color_pink"/>
    </LinearLayout>

</LinearLayout>
